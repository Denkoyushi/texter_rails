<%= render 'layouts/errors', object: @message %>

<div class="row">
  <div class="col-md-6 pull-left">
    <h2>texteR your friends</h2>
    <br />

    <%= form_for @message do |f| %>
      <div class="form-group">
        <%= f.text_field :from, placeholder: "From" %>
      </div>
      <div class="form-group">
        <input name="message[to][]" type="text" id="to-field" placeholder="To" />
        <a id="add_field" class="btn btn-warning btn-xs">Add Recipient</a>
      </div>
      <div class="form-group">
        <%= f.text_field :mediaurl, placeholder: "Picture URL" %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, cols: 35, rows: 7, placeholder: "Message" %>
      </div>

      <%= f.submit class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="col-md-6 pull-right">
    <% if current_user != nil %>
      <h2>Contacts</h2>
      <% @contacts.each do |contact| %>
        <li><%= link_to contact.receiver.email, user_path(contact.receiver) %></li>
      <% end %>
    <% end %>
  </div>
</div>
